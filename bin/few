#!/usr/bin/env ruby
require 'pathname'
require 'tempfile'
require 'cgi'
require 'kconv'

def open_browser(url)
  case RUBY_PLATFORM.downcase
  when /linux/
    if ENV['KDE_FULL_SESSION'] == 'true'
      system 'kfmclient', 'exec', url
    elsif ENV['GNOME_DESKTOP_SESSION_ID']
      system 'gnome-open', url
    elsif system("exo-open -v >& /dev/null")
      system 'exo-open', url
    else
      system 'firefox', url
    end
  when /darwin/
    system 'open', url
  when /mswin(?!ce)|mingw|bccwin/
    system 'start', url
  else
    system 'firefox', url
  end
end

def require_monad(*libraries)
  libraries.all? {|l|
    l = l.to_s
    begin
      if File.basename(l).include? '.'
        load l
      else
        require l
      end
    rescue LoadError
    end
  }
end

require_monad :rubygems, :markdown

def few(filetype = 'text')
  t = Tempfile.new('few')

  File.open(t.path, 'w') do |io|
    a = CGI.escapeHTML ARGF.read.toutf8
    a = a.gsub(/\r?\n/, "<br />\n")

    a = a.gsub(/.\x08/, '')
    a = a.gsub(/\x1b\[([0-9]*)m/) do
      case $1
      when "","39"
        '</font>'
      when "30"
        '<font color="black">'
      when "31"
        '<font color="red">'
      when "32"
        '<font color="green">'
      when "33"
        '<font color="yellow">'
      when "34"
        '<font color="blue">'
      when "35"
        '<font color="magenta">'
      when "36"
        '<font color="cyan">'
      when "37"
        '<font color="white">'
      else
        ''
      end
    end

    io.puts <<-EOF
<html>
  <head>
    <title>few: #{ARGF.filename} (#{filetype})</title>
    <style type="text/css">
        body { white-space: pre; line-height: 5px;}
    </style>
  </head>
  <body>
#{a}
  </body>
</html>
    EOF
  end

  t.close

  File.rename(t.path, html = t.path + '.html')

  open_browser(html)
end

case ARGV[0]
when '-h', '--help'
  puts "[USAGE]: few {filename}"
  puts "         cat {filename} | few"
when '-v', '--version'
  puts "0.0.1"
when '--selfupdate'
  require 'open-uri'
  code = open('http://github.com/ujihisa/few/raw/master/bin/few') {|io| io.read }
  raise unless /^#!/ =~ code
  File.open(__FILE__, 'w') {|io| io.print code }
  system __FILE__, '-v'
when /--filetype=([a-zA-Z0-9]+)/
  ARGV.shift
  few $1
else
  few
end

# vim: set filetype=ruby : set tabstop=2 : set shiftwidth=2
